package com.mario90900.fruitsofnature.tileentity;

import com.mario90900.fruitsofnature.utility.NBTHelper;

import net.minecraft.nbt.NBTTagCompound;
import net.minecraft.tileentity.TileEntity;

public abstract class TilePlant extends TileEntity {
	private int potency = 0;
	private int yield = 0;
	private int growth = 0;
	
	@Override
	public void readFromNBT(NBTTagCompound compound) {
		super.readFromNBT(compound);

		if (compound.hasKey("Potency")) {
			potency = compound.getInteger("Potency");
		}
		if (compound.hasKey("Yield")) {
			yield = compound.getInteger("Yield");
		}
		if (compound.hasKey("Growth")) {
			growth = compound.getInteger("Growth");
		}
	}

	@Override
	public void writeToNBT(NBTTagCompound compound) {
		super.writeToNBT(compound);

		compound.setInteger("Potency", potency);
		compound.setInteger("Yield", yield);
		compound.setInteger("Growth", growth);
	}
	
	public void setStats(int pot, int yld, int grow){
		this.potency = pot;
		this.yield = yld;
		this.growth = grow;
	}
}
