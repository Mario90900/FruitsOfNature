package com.mario90900.fruitsofnature.utility;

import net.minecraft.block.Block;
import net.minecraft.item.ItemStack;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.world.World;

public class PlantHelper {
	
	public boolean plantSeeds(World world, ItemStack stack, Block plant, int x, int y, int z){
		boolean placed = world.setBlock(x, y, z, plant);
		if (!placed)
			return false;
		
		TileEntity tile = world.getTileEntity(x, y, z);
		if (!(tile instanceof ITilePlant)) {
			world.setBlockToAir(x, y, z);
			return false;
		}
		
		ITilePlant plantTile = (ITilePlant) tile;
		//TODO Add in the moving of stats to the tileEnt
		
		return true;
	}
}
