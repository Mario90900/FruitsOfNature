package com.mario90900.fruitsofnature.item;

import net.minecraft.item.ItemStack;

import com.mario90900.fruitsofnature.reference.UnlocalizedNames;
import com.mario90900.fruitsofnature.utility.NBTHelper;

public class ItemBredSeedsBase extends ItemFON{ //The base class for any modded seed that will have stats
	public ItemBredSeedsBase(){
		super();
		this.setMaxStackSize(64);
	}
	
	public void setPotency(ItemStack stack, int value){
		NBTHelper.setInteger(stack, "Potency", value);
	}
	
	public void setYield(ItemStack stack, int value){
		NBTHelper.setInteger(stack, "Yield", value);
	}
	
	public void setGrowth(ItemStack stack, int value){
		NBTHelper.setInteger(stack, "Growth", value);
	}
	
	public int getPotency(ItemStack stack){
		return NBTHelper.getInt(stack, "Potency");
	}
	
	public int getYield(ItemStack stack){
		return NBTHelper.getInt(stack, "Yield");
	}
	
	public int getGrowth(ItemStack stack){
		return NBTHelper.getInt(stack, "Growth");
	}
}
