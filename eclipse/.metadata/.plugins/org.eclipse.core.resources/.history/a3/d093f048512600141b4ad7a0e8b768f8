package com.mario90900.fruitsofnature.item;

import java.util.List;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.ItemStack;
import net.minecraft.util.StatCollector;

import com.mario90900.fruitsofnature.reference.UnlocalizedNames;
import com.mario90900.fruitsofnature.utility.NBTHelper;

/* 
 * The base class for any modded seed that will have stats
 * Potency effects the strength of the crop, ex. spicyness of a pepper or otherwise strength of an effect
 * Yield effects the amount harvested
 * Growth effects the growth speed
 * Each stat operates on a percentage of the default value, and has a total of 5 levels
 * Very Low = 25% | Low = 50% | Average = 100% | High = 150% | Very High = 200%
 * Represented by an int for the levels, 0 = Very Low, up to 4 = Very High
 */
public class ItemBredSeedsBase extends ItemFON{
	public ItemBredSeedsBase(){
		super();
		this.setMaxStackSize(64);
	}
	
	@Override //Adding the information on the Potency, Yield, and Growth to the tooltip
	public void addInformation(ItemStack stack, EntityPlayer player, List list, boolean flag){
		String potency;
		String yield;
		String growth;
		int level = getPotency(stack);
		switch(level){
		case 0:
			potency = StatCollector.translateToLocal("Very Low");
			break;
		case 1:
			potency = "Low";
		}
	}
	
	public void setPotency(ItemStack stack, int value){
		NBTHelper.setInteger(stack, "Potency", value);
	}
	
	public void setYield(ItemStack stack, int value){
		NBTHelper.setInteger(stack, "Yield", value);
	}
	
	public void setGrowth(ItemStack stack, int value){
		NBTHelper.setInteger(stack, "Growth", value);
	}
	
	public int getPotency(ItemStack stack){
		return NBTHelper.getInt(stack, "Potency");
	}
	
	public int getYield(ItemStack stack){
		return NBTHelper.getInt(stack, "Yield");
	}
	
	public int getGrowth(ItemStack stack){
		return NBTHelper.getInt(stack, "Growth");
	}
}
